{
  "compilerOptions": {
    "module": "es2022",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "target": "es2017",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ]
}
